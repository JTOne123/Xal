<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net40;net472;netstandard2.0;netcoreapp2.0</TargetFrameworks>
    <Version>1.0.6</Version>

    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    
    <Authors>Alexandre Toledo Perez</Authors>
    <Company>Alexandre Toledo Perez</Company>
    <Description>A utility library for .NET</Description>
    <Copyright>Copyright (c) 2018 Alexandre Toledo Perez</Copyright>
    <PackageId>Xal</PackageId>
    <Title>Xal - A .NET Utility Library</Title>

    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/alexandretperez/Xal</PackageProjectUrl>
    <RepositoryUrl>https://github.com/alexandretperez/Xal</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>C# .NET Library</PackageTags>
    <PackageReleaseNotes>
      Added new extension methods and there a few BREAKING CHANGES in this version, read more at https://github.com/alexandretperez/Xal/blob/master/CHANGELOG.md
    </PackageReleaseNotes>

    <SignAssembly>true</SignAssembly>
    <AssemblyOriginatorKeyFile>Xal.snk</AssemblyOriginatorKeyFile>

    <AssemblyVersion>1.0.0.0</AssemblyVersion>
    <FileVersion>1.0.0.6</FileVersion>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
        
  </PropertyGroup>
  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp2.0' OR '$(TargetFramework)' == 'netstandard2.0'">
    <PackageReference Include="System.Data.SqlClient">
      <Version>4.4.3</Version>
    </PackageReference>
    <Compile Remove="Extensions\DrawingExtensions.cs"></Compile>
  </ItemGroup>
</Project>